<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="hobbies_search">
      <p>
        <input type="search" name="search" placeholder="キーワードを入力" size="20">
        <input type="submit" name="submit" value="検索">
      </p>
      <p>
        <ul>
          <li><input type="radio" name="sort" value="人気順">人気順　</li>
          <li><input type="radio" name="sort" value="新着順">新着順</li>
        </ul>
      </p>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>
<div class="hobbies_contents">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <table class="table table-striped table-bordered" width="80%">
          <tbody>
            <% @hobbies.each do |h| %>
            <tr>
              <td><%= h.name %></td>
              <td><button type="button" class="btn btn-warning">いいね</button>: <%= h.goodNum %></td>

              <td><%= button_to "削除", { action: :destroy, id: h.id }, class:'btn btn-default' %></td>

              <td><%= button_to "登録", { controller: :user_hobbies, action: :create, id: h.id }, class:'btn btn-success' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>
</div>
