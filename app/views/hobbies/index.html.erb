<h1>今、話題の趣味！</h1>
<% @hobbies.each do |h| %>
  <p><%= h.name %></p>
<% end %>
<%= form_for @hobby,:url => {:action => :create} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
<% if logged_in? %>
  <%= current_user.username %>
  <%= link_to 'ログアウト', logout_path %>
<% else %>
  <%= link_to 'Twitterでログイン', 'auth/twitter'%>
<% end %>
