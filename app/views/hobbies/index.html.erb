<div class="hobbies_titles">
  <p class="hobbies_title">みんなの趣味</p>
</div>
<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <div class="hobbies_search">
      <%= form_tag hobbies_path, class: 'form-inline' do %>
      　<div class="input-group">
        <%= text_field :search, :key, class:'form-control' %>
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class='glyphicon glyphicon-search'></i>
            </button>
        </span>
        </div>
      <% end %>
      <ul class="list-inline">
        <li class="list-inline-item"><input type="radio" name="sort" value="人気順">人気順</li>
        <li class="list-inline-item"><input type="radio" name="sort" value="新着順">新着順</li>
      </ul>
    </div>
  </div>
  <div class="col-sm-3"></div>
</div>
<div class="row">
  <div class="hobbies_contents">
    <div class="col-sm-10 col-sm-offset-1">
        <table class="table table-bordered table-striped">
          <tbody>
            <% @hobbies.each do |h| %>
            <tr>
              <td>
                <div>
                  <span style="font-size: 30px;"><%= h.name %></span>
                  <button type="button" class="btn btn-link"><span class="glyphicon glyphicon-heart-empty"></span></button><%= h.goodNum %>
                </div>
                <div>
                  <div class="col-sm-10" style="font-size: 30;">
<!--                    この趣味の人：-->
                    <% h.user_hobbies.each do |uh| %>
                    <%= link_to image_tag(uh.user.image_url, height: 30, width: 30), controller: :users, action: :show, id: uh.user.id %>
                    <% end %>
                  </div>
                  <%= button_to "自分も始めてみる", { controller: :user_hobbies, action: :create, id: h.id }, class:'col-md-2 btn btn-success btn-sm' %>
                </div>
              </td>
              <td><%= button_to "削除", { action: :destroy, id: h.id }, class:'btn btn-default' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
